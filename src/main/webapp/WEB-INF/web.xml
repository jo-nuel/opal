<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
      version="3.1">
  <servlet>
    <servlet-name>ConnServlet</servlet-name>
    <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/ConnServlet</url-pattern>
  </servlet-mapping>
	<servlet>
        <servlet-name>AddOpalCardServlet</servlet-name>
        <servlet-class>uts.isd.controller.AddOpalCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddOpalCardServlet</servlet-name>
        <url-pattern>/AddOpalCardServlet</url-pattern>
    </servlet-mapping>

    <!-- Update Opal Card Servlet -->
    <servlet>
        <servlet-name>UpdateOpalCardServlet</servlet-name>
        <servlet-class>uts.isd.controller.UpdateOpalCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOpalCardServlet</servlet-name>
        <url-pattern>/UpdateOpalCardServlet</url-pattern>
    </servlet-mapping>

    <!-- Delete Opal Card Servlet -->
    <servlet>
        <servlet-name>DeleteOpalCardServlet</servlet-name>
        <servlet-class>uts.isd.controller.DeleteOpalCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteOpalCardServlet</servlet-name>
        <url-pattern>/DeleteOpalCardServlet</url-pattern>
    </servlet-mapping>

    <!-- List Opal Cards Servlet -->
    <servlet>
        <servlet-name>ListOpalCardsServlet</servlet-name>
        <servlet-class>uts.isd.controller.ListOpalCardsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOpalCardsServlet</servlet-name>
        <url-pattern>/ListOpalCardsServlet</url-pattern>
    </servlet-mapping>

    <!-- Saved Trips Management Servlets -->
    
    <!-- Add Saved Trip Servlet -->
    <servlet>
        <servlet-name>AddSavedTripServlet</servlet-name>
        <servlet-class>uts.isd.controller.AddSavedTripServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSavedTripServlet</servlet-name>
        <url-pattern>/AddSavedTripServlet</url-pattern>
    </servlet-mapping>

    <!-- Update Saved Trip Servlet -->
    <servlet>
        <servlet-name>UpdateSavedTripServlet</servlet-name>
        <servlet-class>uts.isd.controller.UpdateSavedTripServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateSavedTripServlet</servlet-name>
        <url-pattern>/UpdateSavedTripServlet</url-pattern>
    </servlet-mapping>

    <!-- Delete Saved Trip Servlet -->
    <servlet>
        <servlet-name>DeleteSavedTripServlet</servlet-name>
        <servlet-class>uts.isd.controller.DeleteSavedTripServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteSavedTripServlet</servlet-name>
        <url-pattern>/DeleteSavedTripServlet</url-pattern>
    </servlet-mapping>

    <!-- List Saved Trips Servlet -->
    <servlet>
        <servlet-name>ListSavedTripsServlet</servlet-name>
        <servlet-class>uts.isd.controller.ListSavedTripsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListSavedTripsServlet</servlet-name>
        <url-pattern>/ListSavedTripsServlet</url-pattern>
    </servlet-mapping>
</web-app>
